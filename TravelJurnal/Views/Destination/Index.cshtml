@model IEnumerable<TravelJurnal.Models.Destination>

@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>
                        <button asp-action="Edit" asp-route-id="@item.DestinationId" class="btn btn-primary">Edit</button> |
                        <button asp-action="Details" asp-route-id="@item.DestinationId" class="btn btn-info">Details</button> |
                        <button asp-action="Delete" asp-route-id="@item.DestinationId" onclick="return confirm('Are you sure you want to delete this destination?');" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No destinations found.</td>
            </tr>
        }
        <p>
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </p>

    </tbody>
</table>

<style>
    html {
        font-size: 14px;
    }

